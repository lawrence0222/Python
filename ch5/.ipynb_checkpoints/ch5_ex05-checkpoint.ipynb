   "source": [
    "mode = input(\"請先選擇要轉換的溫標(華氏or攝氏)：\")\n",
    "\n",
    "if mode == \"華氏\":\n",
    "    temp = eval(input(\"請輸入華氏溫度：\"))\n",
    "    temp = (temp - 32) * 5 / 9\n",
    "    print(\"轉換成攝氏溫度為：%5.2f\" % temp)\n",
    "else:\n",
    "    temp = eval(input(\"請輸入攝氏溫度：\"))\n",
    "    temp = temp * 9 / 5 + 32\n",
    "    print(\"轉換成華氏溫度為：%5.2f\" % temp)"
   ]
  }
